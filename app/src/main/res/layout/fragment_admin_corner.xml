<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn_createpost"
            android:text="Create New Post"
            android:textColor="@color/white"
            android:background="@android:color/holo_green_dark"
            android:layout_width="0dip"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_approvalRequests"
            android:layout_width="0dip"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:text="Approval Requests"
            android:background="@android:color/holo_purple"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn_findmembers"
            android:layout_width="0dip"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:text="Search Members"
            android:background="@android:color/holo_blue_dark"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnddnewstation"
            android:layout_width="0dip"
            android:layout_margin="10dp"
            android:text="Add New Station"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <Button
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="0dip"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>