<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileUpdateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:editable="false"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="ProfileVerify/New member"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/creamwhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mainwindowviews"
                    android:ems="10"
                    android:hint="Name"
                    android:focusable="false"
                    android:inputType="none" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mainwindowviews"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/employee_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mainwindowviews"
                    android:ems="10"
                    android:hint="Permanent Employee Number"
                    android:inputType="text"
                    android:textAllCaps="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/iddate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Date of Birth"
                        android:textAlignment="gravity"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/id_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/mainwindowviews"
                        android:focusable="false"
                        android:hint="dd-mm-yyy" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Permanent Address"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/add_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mainwindowviews"
                    android:hint="Flat / House No/ Building"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/add_line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mainwindowviews"
                    android:hint="Street / Locality "
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/district"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="District          "
                        android:textAlignment="gravity"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/id_district"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:entries="@array/district_list"
                        android:hint="Dist" />
                     <TextView
                         android:id="@+id/error_dist"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="    "
                         />
                </LinearLayout>

                <EditText
                    android:id="@+id/pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mainwindowviews"
                    android:hint="PIN CODE"
                    android:inputType="number"
                    android:maxLength="6" />

                <EditText
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mainwindowviews"
                    android:editable="false"
                    android:text="Kerala" />

                <EditText
                    android:id="@+id/home_station_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mainwindowviews"
                    android:hint="Home station code ( eg : KL51)"
                    android:inputType="text"
                    android:maxLength="4"
                    android:textAllCaps="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Other Details"
                    android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="@android:color/background_dark"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/datejoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Date Of Joining as AMVI "
                        android:textAlignment="gravity"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/id_dateofjoining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/mainwindowviews"
                        android:focusable="false"
                        android:hint="dd-mm-yyy"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Present RTO District"
                        android:textAlignment="gravity"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/id_present_district"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:entries="@array/district_list"
                        android:hint="Dist" />
                    <TextView
                        android:id="@+id/error_rto_dist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    "
                        />
                </LinearLayout>

                <EditText
                    android:id="@+id/present_station_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mainwindowviews"
                    android:hint="present station code ( eg : KL51)"
                    android:inputType="text"
                    android:maxLength="4"
                    android:textAllCaps="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Membership Type"
                        android:textAlignment="gravity"
                        android:textSize="20dp" />

                    <Spinner
                        android:id="@+id/id_memtype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:entries="@array/membertype"
                        android:hint="Dist" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Membership Fee Paid"
                        android:textAlignment="gravity"
                        android:textSize="20dp" />

                    <RadioGroup
                        android:id="@+id/rd_group_feepaid"
                        android:layout_width="match_parent"
                        android:layout_height="53dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:textAlignment="gravity">

                        <RadioButton
                            android:id="@+id/rg5r1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:text="YES" />

                        <RadioButton
                            android:id="@+id/rg5r2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="NO" />

                    </RadioGroup>
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:text="Upload Photo"
                        android:textAlignment="gravity"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn_uploadphoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="choose photo" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/mainwindowbutton"
                    android:text="Upload" />
            </LinearLayout>
        </ScrollView>
        />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>